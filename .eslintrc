{
    "extends": [
        "eslint:recommended",
        "prettier"
    ],
    "plugins": ["prettier"],
    "env": {
        "browser": true,
        "node": true,
        "es6": true
    },
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "rules": {
        "indent": ["error", "tab"],
        "no-console": "off",
        "strict": ["error", "global"],
        "curly": "warn",
        "semi": [2, "never"],
        "no-new": 0,
        "prettier/prettier": [
            "error",
            {
                "trailingComma": "es5",
                "singleQuote": true,
                "printWidth": 120,
                "semi": false,
                "useTabs": true
            }
        ]
    },
    "globals": {
        "jQuery": true,
        "wp": true
    }
  }
